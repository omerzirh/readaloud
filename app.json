{
  "expo": {
    "name": "ReadAloud",
    "slug": "readaloud",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.readaloud.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to the microphone for text-to-speech functionality"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.readaloud.app",
      "permissions": [
        "INTERNET",
        "READ_CLIPBOARD",
        "WRITE_CLIPBOARD"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "locales": {
      "en": {
        "name": "ReadAloud"
      },
      "tr": {
        "name": "Sesli Oku"
      }
    }
  }
}
